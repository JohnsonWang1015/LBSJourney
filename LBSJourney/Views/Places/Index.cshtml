<script type="text/javascript">
    var app = new Vue({
        el: "#app",
        data:{
            imageLink: "",
            imageShow: false,
            spinnerShow: false,
            keyword: "",
            checked: [],
        },
        methods:{
            generateImage: async function () {
                app.spinnerShow = true;
                app.imageShow = false;
                if (app.checked.length > 0) {
                    app.checked.forEach(
                        (element) => {
                            app.keyword += element + ", ";
                        }
                    );
                    await axios.post(
                        url = "/sd",
                        data = {
                            keyword: app.keyword
                        }
                    ).then(
                        (res) => {
                            if (res.data) {
                                app.imageLink = res.data;
                                app.imageShow = true;
                                console.log(app.imageLink);
                            }
                        }
                    ).catch(
                        (err) => {
                            console.error(err);
                        }
                    );
                } else {
                    Swal.fire({
                        title: "警告",
                        icon: "warning",
                        text: "請選擇一個或多個關鍵字",
                    });
                    app.spinnerShow = false;
                    app.imageShow = false;
                }
            },
        }
    });
</script>