@{
    ViewData["Title"] = "註冊";
}

<fieldset id="app">
    <div class="container">
        <div class="container">
            <div class="row container w-100">
                <div class="col container">
                    <br><br><br>
                    <h3 class="text-center fw-bold p-2" style="background-color: #ebdede;">註冊資料</h3>
                    <br>
                    <div class="align-middle align-items-center">
                        <div class="text-center mx-auto">
                            <img v-show="showPicture" class="rounded-circle img-fluid" style="width: 30%;height: auto;" :src="pictureUrl" alt="個人"/>
                        </div>
                        <form action="" method="post">
                            <div class="mb-3">
                                <label class="form-label fw-bold">帳號</label>
                                <input type="text" name="UserName" class="form-control border-secondary" required/>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">電子郵件</label>
                                <input v-model="email" type="email" name="Email" class="form-control border-secondary" required/>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">密碼</label>
                                <input type="password" name="Password" class="form-control border-secondary" required/>
                            </div>
                            @*<div class="mb-3">
                                <label class="form-label fw-bold">確認密碼</label>
                                <input type="password" name="ConfirmPassword" class="form-control border-secondary" required/>
                            </div>*@
                            <div class="mt-4">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-secondary btn-lg fw-bold">註冊</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</fieldset>
<script>
    $(document).ready(
        async function (){
            $(".footer").hide();
            app.pictureUrl = sessionStorage.getItem("_pictureUrl");
            app.email = sessionStorage.getItem("_email");
            if (app.pictureUrl){
                app.showPicture = true;
            }
        }
    );
</script>
<script type="text/javascript">
    var app = new Vue({
        el: "#app",
        data:{
            showPicture: false,
            pictureUrl: "",
            email: "",
        },
        methods:{

        },
    });
</script>