@model System.Collections.Generic.List<LBSJourney.Models.Entity.University>
@{
    ViewData["Title"] = "學生資料查詢";
}

<fieldset id="panel">
    <br />
    <br />
    <br />
    <div class="text-center mt-2">
        @if (Model != null)
        {
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <td>學號</td>
                        <td>學年度</td>
                        <td>學期</td>
                        <td>日夜間</td>
                        <td>學制</td>
                        <td>系所</td>
                        <td>班級</td>
                        <td>姓名</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.schoolId</td>
                            <td>@item.year</td>
                            <td>@item.semester</td>
                            <td>@item.dOrN</td>
                            <td>@item.academic</td>
                            <td>@item.department</td>
                            <td>@item.className</td>
                            <td>@item.name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</fieldset>